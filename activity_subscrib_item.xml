<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SubscribItemActivity" >

    <TextView
        android:id="@+id/subtvtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#44B5DD"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:text="拓展预约" />
    
    <ImageView 
        android:id="@+id/teaimg"
        android:layout_width="250px"
        android:layout_height="250px"
        android:layout_marginTop="20px"
        android:layout_below="@+id/subtvtitle"/>
    <TextView 
        android:id="@+id/subtvname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/teaimg"
        android:layout_below="@+id/subtvtitle"
        android:layout_marginLeft="20px"
        android:layout_marginTop="40px"
        android:text="XXX"/>
        <TextView 
        android:id="@+id/subtvage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/teaimg"
        android:layout_below="@+id/subtvname"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="XXX"/>
   <TextView 
        android:id="@+id/subtvgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_toRightOf="@+id/teaimg"
        android:layout_below="@+id/subtvage"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="XXX"/>
     <TextView 
        android:id="@+id/subtvexperience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/teaimg"
        android:layout_marginLeft="20px"
        android:layout_marginTop="20px"
        android:text="XXX"/>
       <TextView 
        android:id="@+id/subtvmotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_below="@+id/subtvexperience"
        android:layout_marginLeft="20px"
        android:layout_marginTop="40px"
        android:text="XXX"/>
		<TextView
		    android:id="@+id/tvshowtime"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="16sp"
		    android:layout_alignLeft="@+id/subtvmotto"
		    android:layout_below="@+id/subtvmotto"
		    android:text="时间预览表如下："/>
       <ImageView
           android:id="@+id/timetable"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
		   android:layout_below="@+id/subtvmotto"
           android:layout_alignParentBottom="true"
           android:src="@drawable/time" />

</RelativeLayout>
