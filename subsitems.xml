<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/subsimg"
        android:layout_width="250px"
        android:layout_height="250px"
        android:src="@drawable/ic_launcher"
        />
    <LinearLayout
         android:orientation="vertical"
        android:id="@+id/subslayout"
        android:layout_width="match_parent"
        android:layout_height="250px">
        
        <TextView
		    android:id="@+id/subsname"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="18sp"
		    android:textColor="#000"
		    android:layout_marginTop="60px"
		    android:text="拓展师姓名:wuhuan"></TextView>
         <TextView
		    android:id="@+id/subsage"
		    android:layout_marginTop="20px"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="16sp"
		    android:textColor="#000"
		    android:text="拓展师教龄：1.5年"></TextView>
          <TextView
		    android:id="@+id/subsgrade"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textSize="16sp"
		    android:textColor="#000"
		    android:layout_marginTop="20px"
		    android:text="拓展师评分：9.5分"></TextView>
    </LinearLayout>
		
</LinearLayout>
