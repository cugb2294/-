<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActTestActivity" >

    <TextView
        android:id="@+id/test_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="测一测你的感情之路" 
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView 
        android:id="@+id/test_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:textSize="18sp"
        android:text="一个熟鸡蛋，一个生鸡蛋，让你选择放在4个不同的地方"
        android:textAppearance="?android:attr/textAppearanceLarge"
        />
    <RadioGroup 
        android:id="@+id/test_rg"
        android:layout_width="350px"
        android:layout_height="250px"
        android:layout_marginTop="40px"
        android:layout_centerHorizontal="true"
        
        android:layout_below="@+id/test_content">
        <RadioButton 
            android:id="@+id/test_rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1、自己口袋里"/>
         <RadioButton 
            android:id="@+id/test_rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2、高高的树上"/>
          <RadioButton 
            android:id="@+id/test_rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3、流动的河里"/>
           <RadioButton 
            android:id="@+id/test_rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4、路边的花坛里"/>
    </RadioGroup>
    <Button 
        android:id="@+id/test_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:layout_below="@+id/test_rg"
        android:text="点击了解你的感情之路"/>
    <TextView 
        android:id="@+id/test_warn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_submit"
        android:layout_marginTop="20px"
        android:textColor="#F00"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="warning:\n你必须先选择一个选项"/>

</RelativeLayout>
